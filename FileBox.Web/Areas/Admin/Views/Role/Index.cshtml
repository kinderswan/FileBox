@model IEnumerable<FileBox.Web.ViewModels.UserRoleMapModel>
@section main{

    <h3> Roles in system</h3>
    <hr/>
    <table class="table table-striped">
        <tr><td class="warning">@Html.ActionLink("Create new", "Create")</td></tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleDescription)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleDescription)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.UserRoleID }) <span class="glyphicon glyphicon-edit"></span>|
                    @Html.ActionLink("Details", "Details", new { id = item.UserRoleID }) <span class="glyphicon glyphicon-info-sign"></span> |
                    @Html.ActionLink("Delete", "Delete", new { id = item.UserRoleID }) <span class="glyphicon glyphicon-remove-sign"></span>
                </td>
            </tr>
        }

    </table>
}
