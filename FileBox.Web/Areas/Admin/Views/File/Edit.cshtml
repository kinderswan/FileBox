@model FileBox.Web.ViewModels.FilesInfoMapModel

@section main{
<h3>Edit "@Model.FileName@Model.Extension"</h3>
<hr />
    @using (Html.BeginForm("Edit", "File", FormMethod.Post, new {id = Model.FilesInfoID}))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="width:60%">
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})

            <div class="form-group">
                @Html.LabelFor(model => model.FileName, htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-9">
                    @Html.TextBox("newName", Model.FileName, new {@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.FileName, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Extension, htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Extension, new {@class = "form-control", @readonly = "readonly"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ShortUrl, htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.ShortUrl, new {@class = "form-control", @readonly = "readonly"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FileAccess, htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-9">
                    <div class="checkbox checkbox-inline">
                        @Html.CheckBox("fAccess", Model.FileAccess)
                        @Html.ValidationMessageFor(model => model.FileAccess, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.WasCreated, htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-9">
                    @Html.EditorFor(model => model.WasCreated, new {htmlAttributes = new {@class = "form-control", @readonly = "readonly"}})
                    @Html.ValidationMessageFor(model => model.WasCreated, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default"/>
                </div>
            </div>
        </div>
    }

    <div>
        <span class="glyphicon glyphicon-chevron-left"></span>@Html.ActionLink("Back to List", "Index")
    </div>
}
@section scripts
{
    <script type="text/javascript">$.validator.methods["date"] = function (value, element) { return true; }</script>
}