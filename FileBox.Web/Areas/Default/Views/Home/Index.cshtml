@using FileBox.Web.ViewModels
@model FileBox.Web.ViewModels.UserInfoMapModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Default/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Url</h2>
@if (Model != null)
{
    <div class="row row-offcanvas row-offcanvas-left">
        <div class="col-xs-6 col-md-3 sidebar-offcanvas" id="sidebar" role="navigation">
            <ul class="nav">
                <li>@Html.Partial("Search")</li>
                <li><hr /></li>
                <li>@Html.Partial("UploadFile")</li>
            </ul>
        </div>

        <div class="col-xs-12 col-sm-9">
            @foreach (var item in ViewBag.Files)
            {
                <div class="well col-sm-3 center-block" style="margin: 0.75rem;">
                    <div style="width:75%">
                        <label class="col-sm-2" style="text-align: center; padding: 0; margin-top: 0; text-overflow: ellipsis; width: 75%">@item.FileName</label>
                    </div>
                    <div class="btn-group-vertical pull-right" style="width: 25%">

                        <button class="btn btn-primary glyphicon glyphicon-edit" data-toggle="modal" data-target="#@item.FilesInfoID"></button>
                        <div class="modal fade" id="@item.FilesInfoID" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="vertical-alignment-helper">
                                <div class="modal-dialog vertical-align-center">
                                    <div class="modal-content" style="width:20%">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">
                                                <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>

                                            </button>
                                            <h4 class="modal-title" id="myModalLabel">Edit file</h4>
                                        </div>
                                        @{Html.RenderPartial("EditFile", (FilesInfoMapModel)item);}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <a href="@Url.Action("Download", "File", new {id = item.FilesInfoID}, null)" class="btn btn-primary">
                            <span class="glyphicon glyphicon-floppy-save"></span>
                        </a>
                        <a href="@Url.Action("Delete", "File", new {id = item.FilesInfoID}, null)" class="btn btn-primary">
                            <span class="glyphicon glyphicon-floppy-remove"></span>
                        </a>
                        <button class="btn btn-primary" onclick=" prompt('url', '@ViewBag.ShortUrl@item.ShortUrl' ) ">
                            url
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
}

