@model FileBox.Web.ViewModels.FilesInfoMapModel

@using (Html.BeginForm("EditFile", "File", FormMethod.Post))
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    @Html.Hidden("id", Model.FilesInfoID)
    <div class="modal-body">
        <div class="form-group text-center">
            @Html.Label("FileName")
            @Html.TextBox("newName", Model.FileName, new { @class = "form-control-static " })
        </div>
        <div class="form-group text-center">
            @Html.Label("File access ", new { @class = "control-label" })
            @Html.CheckBox("fAccess", Model.FileAccess)
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit">Save</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
}