@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FileBOX</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (IsSectionDefined("nav"))
    {
        RenderSection("nav");
    }
    else
    {
        <img src="~/Content/images/bg-filebox.png" style="position: absolute; right: 0; bottom: 0;"/>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("FileBox", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav pull-right">
                        @Html.Partial("_UserLogin")
                    </ul>
                </div>
            </div>
        </div>
    }
    <div class="container">
        @RenderSection("main")
            <hr />
        </div>
        @if (IsSectionDefined("footer"))
        {
            RenderSection("footer");
        }
        else
        {
            <footer class="navbar-fixed-bottom text-center">
                <p>&copy; @DateTime.Now.Year - FileBOX</p>
            </footer>
        }

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>

</html>